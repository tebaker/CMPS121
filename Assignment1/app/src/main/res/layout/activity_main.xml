<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/equalsVal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        app:layout_constraintBaseline_toBaselineOf="@+id/result2"
        app:layout_constraintEnd_toStartOf="@+id/result2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exp2EditText"
        tools:text="@string/valEquals" />

    <Button
        android:id="@+id/equalsVal5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        app:layout_constraintBaseline_toBaselineOf="@+id/result5"
        app:layout_constraintEnd_toStartOf="@+id/result5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exp5EditText"
        tools:text="@string/valEquals" />

    <Button
        android:id="@+id/equalsVal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        app:layout_constraintBaseline_toBaselineOf="@+id/result4"
        app:layout_constraintEnd_toStartOf="@+id/result4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exp4EditText"
        tools:text="@string/valEquals" />

    <Button
        android:id="@+id/equalsVal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        app:layout_constraintBaseline_toBaselineOf="@+id/result3"
        app:layout_constraintEnd_toStartOf="@+id/result3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exp3EditText"
        tools:text="@string/valEquals" />

    <EditText
        android:id="@+id/exp5EditText"
        android:layout_width="132dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Enter Exponent"
        android:inputType="number|numberSigned"
        app:layout_constraintBaseline_toBaselineOf="@+id/equalsVal5"
        app:layout_constraintEnd_toStartOf="@+id/equalsVal5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/val5Text" />

    <EditText
        android:id="@+id/exp4EditText"
        android:layout_width="132dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Enter Exponent"
        android:inputType="number|numberSigned"
        app:layout_constraintBaseline_toBaselineOf="@+id/equalsVal4"
        app:layout_constraintEnd_toStartOf="@+id/equalsVal4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/val4Text2" />

    <EditText
        android:id="@+id/exp3EditText"
        android:layout_width="132dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Enter Exponent"
        android:inputType="number|numberSigned"
        app:layout_constraintBaseline_toBaselineOf="@+id/equalsVal3"
        app:layout_constraintEnd_toStartOf="@+id/equalsVal3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/val3Text2" />

    <EditText
        android:id="@+id/exp2EditText"
        android:layout_width="132dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="Enter Exponent"
        android:inputType="number|numberSigned"
        app:layout_constraintBaseline_toBaselineOf="@+id/equalsVal2"
        app:layout_constraintEnd_toStartOf="@+id/equalsVal2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/val2Text2" />

    <TextView
        android:id="@+id/val5Text"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:text="5"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/exp5EditText"
        app:layout_constraintEnd_toStartOf="@+id/exp5EditText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/val4Text2"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:text="4"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/exp4EditText"
        app:layout_constraintEnd_toStartOf="@+id/exp4EditText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/val3Text2"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:text="3"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/exp3EditText"
        app:layout_constraintEnd_toStartOf="@+id/exp3EditText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/val2Text2"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:text="2"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/exp2EditText"
        app:layout_constraintEnd_toStartOf="@+id/exp2EditText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/result5"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:text="result"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/equalsVal5"
        app:layout_constraintTop_toBottomOf="@+id/result4" />

    <TextView
        android:id="@+id/result4"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:text="result"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/result5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/equalsVal4"
        app:layout_constraintTop_toBottomOf="@+id/result3" />

    <TextView
        android:id="@+id/result3"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:text="result"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/result4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/equalsVal3"
        app:layout_constraintTop_toBottomOf="@+id/result2" />

    <TextView
        android:id="@+id/result2"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:text="result"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/result3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/equalsVal2"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>